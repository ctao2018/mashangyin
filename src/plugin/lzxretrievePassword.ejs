<script>

var countdown=60; 
  function sendemail(){
    if( countdown === 60){
      var obj = $(".rplyzm-btn");
      settime(obj);
    }
  }
    function settime(obj) { //发送验证码倒计时
        if (countdown == 0) { 
            obj.html("获取验证码");
            countdown = 60; 
            return;
        } else { 
            obj.html("重新发送(" + countdown + ")");
            countdown--; 
        } 
    setTimeout(function() { 
        settime(obj) }
        ,1000) 
    }
</script>