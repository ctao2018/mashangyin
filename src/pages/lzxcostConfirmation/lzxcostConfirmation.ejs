  <div class="cc-foot">
    <div class="ccf-head">
      <span>合计：<em>180.00元</em></span>
      <span>已支付：<em>0.00元</em></span>
    </div>
    <div class="ccf-section">
      <div>
        <span>需支付：</span>
        <em>180.00元</em>
      </div>
      <a href="javascript:;;" onclick="yyalert()">有异议？</a>
    </div>
    <a href="javascript:;;" class="cc-zfBtn">支付</a>
  </div>
  <!-- 选择支付 -->
  <div class="cc-alert-zfbox">
    <div class="ps-xuanze">
      <span>请选择支付方式</span>
    </div>
    <div class="ps-zfbxo">
      <a href="javascript:;;">
        <div class="psz-pa"><img src="./front/images/icon/pinan.png" alt=""></div>
        <p>平安现货交易通</p>
      </a>
      <a href="javascript:;;">
        <div class="psz-xx"><img src="./front/images/icon/xianxia.png" alt=""></div>
        <p>线下支付</p>
      </a>
    </div>
  </div>
