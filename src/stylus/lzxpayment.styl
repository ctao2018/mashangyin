@import './base'

.payment
  .p-header
    color: #666666
    height Rem(30)
    line-height: Rem(30)
    background-color #feecbf
    padding 0 Rem(15)
    font-size: Rem(10)
    ellp()
    span
      display inline-block
      vertical-align middle
    em
      color $theme-color
      font-size: Rem(12)
  .p-section
    background-color #fff
    .ps-zfname
      height Rem(50)
      line-height Rem(50)
      color: #666
      text-align center
      font-size: Rem(15)
      botLine()
    .ps-mondy
      height Rem(50)
      line-height Rem(50)
      text-align center
      color $theme-color
      font-weight: bold
      botLine()
      font-size: Rem(24)
    .ps-xuanze
      position relative
      border-top 1px solid #eee
      width 80%
      margin Rem(30) auto
      >span
        position: absolute
        width: Rem(140)
        left 50%
        margin-left Rem(-70)
        top Rem(-8)
        background-color #fff
        text-align center
        color #666
    .ps-zfbxo
      display flex
      justify-content: center
      align-items: center
      padding Rem(10) 0 Rem(30)
      >a
        font-size: Rem(12)
        text-align center
        color #666
        width 40%
        height Rem(70)
        .psz-pa
          height Rem(40)
        .psz-xx
          height Rem(50)
          margin-top Rem(-10)
        img
          max-height 100%
        p
          padding-top Rem(10)
  .p-foot
    padding Rem(10) 0
    background-color #fff
    position fixed
    bottom 0
    width 100%
    left 0
    >a
      bigBtn()