@import './base'

.qr-code
  padding Rem(20)
  .qc-box-page
    background-color: #fff
    border-radius: Rem(6)
    padding Rem(20) 0
    text-align center
    font-size: Rem(12)
    color #666
    .qcb-title
      text-align left
      line-height Rem(20)
      color #666
      padding-left Rem(20)
    .qcb-img
      padding Rem(25) Rem(30)
      >img
        max-width 70%
    .qcb-link
      >a
        bigBtn()
        width Rem(160)
        margin-top Rem(10)
  .qc-fx-page
    margin-top Rem(10)
    background-color #fff
    padding Rem(20)
    .qcf-title
      text-align center
      border-top: 1px solid #eee
      position relative
      margin Rem(10) 0
      >span
        position absolute
        top: Rem(-8)
        left 50%
        margin-left Rem(-45)
        color #666
        background-color #fff
        width Rem(90)
    .qcf-list
      display flex
      justify-content: space-between
      align-items: center
      padding Rem(15) 0 0
      li
        width 33.33%
        text-align center
        .qcfl-img
          width Rem(40)
          height Rem(40)
          margin 0 auto Rem(6)
          >img
            max-width 100%
            max-height 100%
        a
          color #666
          font-size: Rem(13)
