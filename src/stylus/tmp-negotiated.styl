@import './base'

.negotiated
  height Rem(125/2)
  background-color #fff
  color #666
  .n-headList
    display flex
    justify-content: space-between
    align-items: center
    font-size: Rem(12)
    li
      position relative
      width 20%
      text-align center
      >span
        padding-top Rem(40)
        display block
      &:after
        content: ''
        position absolute
        width Rem(11)
        height Rem(11)
        border-radius: 50%
        background-color #eee
        top 50%
        margin-top Rem(-5)
        left 50%
        margin-left Rem(-6)
        z-index 8
      &:before
        content: ''
        position absolute
        width 100%
        height 1px
        background-color #eee
        top: 50%
        left -50%
        margin-left: Rem(5)
      &:first-child:before
        display none
      &.active
        color: $theme-color
        &:after
          width Rem(18)
          height Rem(18)
          margin-top Rem(-9)
          margin-left Rem(-9)
          background-color $theme-color
        &:before
          background-color $theme-color
      &.on
        &:after
          background-color #666
        &:before
          background-color $theme-color

