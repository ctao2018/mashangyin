@import './base'

.open-order
  .oo-top-tip
    background-color #feecbf
    color #999
    padding Rem(10) Rem(15)
    font-size: Rem(10)
    position fixed
    top Rem(45)
    left 0
    width 100%
    z-index 9
    span
      display inline-block
      vertical-align middle
  .oo-list
    margin-top Rem(40)
    margin-bottom Rem(155)
    padding Rem(0) Rem(5)
    li
      background-color #fff
      border-radius: Rem(4)
      padding Rem(25) Rem(10) Rem(10) Rem(15) 
      font-size: Rem(12)
      color: #999
      line-height Rem(22)
      margin-bottom Rem(5)
      position relative
      .ool-page
        display flex
        justify-content: space-between
        align-items: center
        >div
          width 50%
          text-align left
      em
        color: $theme-color
        &.ool-money
          font-size: Rem(20)
      span
        color: #333
      .ool-btnbox
        text-align right 
        margin-top Rem(5)
        >a
          display inline-block
          vertical-align middle
          text-align center
          width Rem(60)
          height Rem(20)
          line-height Rem(20)
          border: 1px solid $theme-color
          background-color #fff
          color: $theme-color
          border-radius: Rem(4)
          margin-left Rem(10)
          font-size: Rem(10)
          &.on
            background-color $theme-color
            color: #fff
  .oo-footbox
    position fixed
    bottom 0
    left 0
    width 100%
    background-color #fff
    .oof-tips
      background-color #feecbf
      color: #999
      font-size: Rem(10)
      padding Rem(10) Rem(15)
      .oof-nrbox
        width 95%
        display inline-block
        vertical-align top
        line-height Rem(14)
  .oo-alert
    position fixed
    width: 100%
    height 100%
    left 0
    top: 0
    z-index: 9
    font-size: Rem(12)
    display none
    .ooa-zz
      position absolute
      top: 0
      left 0
      width 100%
      height 100%
      background-color rgba(0,0,0,0.5)
    .ooa-box
      position absolute
      top: 20%
      width 70%
      left 15%
      background-color #fff
      border-radius: Rem(4)
      text-align center
      box-shadow: 0 0 4px #ccc
      padding Rem(20) 0
      input
        height Rem(25)
        border-radius: Rem(4)
        border:1px solid #999
        color #666
        font-size: Rem(12)
        padding 0 Rem(5)
        width 60%
      .ooa-title
        padding-bottom Rem(20)
        color #666
      .ooa-btn-box
        margin-top Rem(20)
        display flex
        justify-content space-between
        align-items: center
        padding 0 Rem(20)
        
        >a
          width 45%
          height Rem(30)
          line-height: Rem(30)
          display block
          background-color #999
          color #fff
          border-radius: Rem(4)
          &.ooa-red
            background-color $theme-color