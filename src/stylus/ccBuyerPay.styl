@import './base'

.buyer-pay
    .cp-tips
        background-color #feecbf
        text-align left
        font-size: Rem(10)
        color #999
        padding Rem(8) Rem(5)
        display flex
        >span
            flex 1
            margin-left Rem(5)
    .ts-ula
        background-color #ffffff
        .ts-lia
            padding: 0 Rem(15)
            height Rem(45)
            border-bottom 1px solid #eeeeee
            display: flex
            align-items: center
            font-size: Rem(12)
            color #999999
            &.two
                justify-content: space-between
            &.ts-lib
                height auto
                padding: Rem(5) Rem(15)
            .c6
                color: #666666
            .fs30
                font-size: Rem(15)
            .fs48
                font-size: Rem(24)
            .fs18
                font-size: Rem(9)
            .red
                color $theme-color
            .ml10
                margin-left: Rem(5)
    .cp-bt
        background-color: #ffffff
        padding: Rem(15)
        z-index 99
        border-top 1px solid #eeeeee
        position: fixed
        left 0
        right 0
        bottom: 0
        .cp-btp
            position relative
            margin-top: Rem(5)
            text-align: center
            padding-bottom Rem(10)
            i 
                width 90%
                height 1px
                background-color: #eeeeee
                display: inline-block
            span 
                font-size: Rem(12)
                position: absolute
                top: Rem(-5)
                left: 50%
                margin-left: Rem(-41)
                padding: Rem(10)
                background-color: #ffffff
        .cp-btul
            margin Rem(10) 0
            display: flex
            justify-content: space-between
            li
                width 33%
                a 
                    width 100%
                    height Rem(50)
                    line-height: Rem(50)
                    text-align: center
                    display: inline-block
                    .cp-btai
                        getBg('c-backod')
                        background-size: Rem(75/2) Rem(48/2);
                        width: Rem(75/2);
                        height: Rem(48/2);
                        display inline-block
                        vertical-align middle
                    .cp-btbi
                        getBg('c-zgpa')
                        background-size: Rem(152/2) Rem(91/2);
                        width: Rem(152/2);
                        height: Rem(91/2);
                        display inline-block
                        vertical-align middle
                    .cp-btci
                        getBg('c-topay')
                        background-size: Rem(105/2) Rem(97/2);
                        width: Rem(105/2);
                        height: Rem(97/2);
                        display inline-block
                        vertical-align middle
                p
                    text-align: center
                    margin-top Rem(10)