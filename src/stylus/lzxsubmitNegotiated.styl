@import './base'

.submit-negotiatd
  .sn-tips
    background-color #feecbf
    text-align center
    font-size: Rem(10)
    color #999
    padding Rem(8) 0
    em
      color $theme-color
      font-size: Rem(14)
      padding 0 Rem(5)
  .sn-section
    background-color #fff
    .sns-tab
      display flex
      justify-content: space-between
      align-items: center
      font-size: Rem(12)
      border-top 1px solid #eee
      text-align center
      span
        display block
        text-align center
        height Rem(30)
        line-height Rem(30)
        border-right 1px solid #eee
        &:last-child
          border-right 0
        &.weibu
          flex 1
          color: #666
          >a
            color #666
      &.sns-tab-four
        span
          width 25%
          color #999
          &.snss-blod
            color: #666
      &.sns-tab-title
        span
          background-color #666
          color #fff
      &.sns-tab-two
        .snst-left
          width 25%
          color: #999
          margin-left -1px
        .snst-right
          flex 1
          color #666
        .snst-stpbox
          font-size: 0
          >span 
            font-size: Rem(14)
            display inline-block
            vertical-align middle
            width Rem(45/2)
            height Rem(45/2)
            line-height Rem(45/2)
            border: 1px solid #eee
          >input
            font-size: Rem(13)
            display inline-block
            vertical-align middle
            height Rem(45/2)
            line-height Rem(45/2)
            border 1px solid #eee
            border-left 0
            border-right 0
            width Rem(100)
            text-align center
            -webkit-appearance: none
            border-radius: 0
  .sns-foot-bar
    position fixed
    bottom 0
    left 5%
    width 90%
    display flex
    justify-content: space-between
    align-items: center
    padding Rem(10) 0
    >a
      width 45%
      height Rem(40)
      line-height Rem(40)
      background-color $theme-color
      color #fff
      text-align center
      border-radius: Rem(4)
      &.sns-kf
        background-color #ff9d00
        .kfIcon
          display: inline-block
          vertical-align: middle
          getBg("yiwen")
          width: Rem(10)
          height: Rem(15)
          background-size: contain
      &.bigBtn
        width 100%
        height Rem(40)
        line-height Rem(40)
        background-color $theme-color
        color #fff
        text-align center
        border-radius: Rem(4)
.red
  color $theme-color
.lv
  color #80c269
.hui
  color #666

        