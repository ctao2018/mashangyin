@import './base'

.to-register
    .cp-tips
        background-color #feecbf
        text-align left
        font-size: Rem(10)
        color #999
        padding Rem(8) Rem(5)
        display flex
        >span
            flex 1
            margin-left Rem(5)
    .tr-ula
        background-color #ffffff
        margin-bottom Rem(5)
        .tr-lia
            padding: 0 Rem(15)
            height Rem(45)
            border-bottom 1px solid #eeeeee
            display: flex
            align-items: center
            font-size: Rem(12)
            color #666666
            justify-content: space-between
            .c6
                color: #666666
            .fs30
                font-size: Rem(15)
            .fs48
                font-size: Rem(24)
            .fs18
                font-size: Rem(9)
            .red
                color $theme-color
            .ml10
                margin-left: Rem(5)
            .tr-fillbx
                .tr-inpa
                    width Rem(150)
                    height Rem(35)
                    line-height Rem(35)
                    padding Rem(5) 0
                    text-align: right 
                    border: none 
                    color #666666
            .tr-djinp
                width Rem(95)
                height Rem(30)
                line-height: Rem(30)
                text-align: center
                border 1px solid #c8c8c8
                border-radius: 5px
                font-size: Rem(10)
                display: none
            .snst-stpbox
                font-size: 0
                >span 
                    font-size: Rem(14)
                    display inline-block
                    vertical-align middle
                    width Rem(45/2)
                    height Rem(45/2)
                    line-height Rem(45/2)
                    border: 1px solid #eee
                    text-align: center
                >input
                    font-size: Rem(13)
                    display inline-block
                    vertical-align middle
                    height Rem(45/2)
                    line-height Rem(45/2)
                    border 1px solid #eee
                    border-left 0
                    border-right 0
                    width Rem(100)
                    text-align center
                    -webkit-appearance: none
                    border-radius: 0
    .fc-btn
        width 100%
        padding: Rem(10) 0
        text-align: center
        background-color: #ffffff
        a
            width Rem(150)
            height Rem(40)
            line-height: Rem(40)
            text-align: center
            font-size: Rem(15)
            color: #ffffff
            border-radius: 5px
            display: inline-block
            background-color $theme-color
        .fc-btna
            background-color #999999
            margin-right: Rem(45/2)
.slc-curr
    text-align right
    height Rem(35)
    line-height Rem(35)
    padding Rem(5) 0
    border: 0
    color: #666
.clearfix:after
    content:""
    clear:both
    visibility:hidden
    display:block
    font-size:0
    height:0
    line-height:0
.left
    float left
.mr10
    margin-right Rem(5)
.mr30
    margin-right Rem(15)
.mt20
    margin-top: Rem(10)

        
            
                