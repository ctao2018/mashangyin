@import './base'

.keypad
  position fixed
  bottom 0
  width 100%
  height 100%
  z-index 11
  display: none
  &.active
    display block
  .k-zz
    position absolute
    width 100%
    height 100%
    left 0
    right 0
    background-color rgba(0,0,0,0.5)
    z-index 9
  .k-section
    background-color #fff
    color #666
    position absolute
    bottom 0
    left 0
    width 100%
    z-index 10
    font-size: Rem(13)
    .ks-title
      height Rem(45)
      line-height Rem(45)
      display flex
      align-items: center
      >span
        width 20%
        text-align center
      >input
        flex: 1
        font-size: Rem(13)
        border: 0
        color #666
      .ksk-name
        color #666
        display inline-block
        vertical-align middle
      &.ks-red
        .ksk-name, input
          color $theme-color
      &.ks-lv
        .ksk-name, input
          color #80c269
      &.ks-hui
        .ksk-name, input
          color #666
    .ks-keypad
      display flex
      justify-content: space-between
      align-items: center
      .ksk-page-nr
        flex 1
        .kskpn-page
          display flex
          span
            flex 1
            height Rem(45)
            line-height Rem(45)
            border-top 1px solid #eee
            text-align center
            border-left 1px solid #eee
      .ksk-page
        width 20%
        >span
          display block
          text-align: center
          height Rem(45)
          line-height Rem(45)
          border-top 1px solid #eee
          border-left 1px solid #eee
          &.ksk-del
            height Rem(91)
            line-height Rem(91)
          &.ksk-qd
            height Rem(91)
            line-height Rem(91)
            background-color #ff9d00
            color #fff

      