@import './base'

.cause-refund
  .cr-tpyy
    display flex
    justify-content: space-between
    align-items: center
    color: #666
    background-color #fff
    toMore()
    padding 0 Rem(15)
    height Rem(45)
    line-height Rem(45)
    input
      border: 0
      text-align right
      padding-right Rem(15)
      color #666
  .cr-pagebox
    margin-top Rem(5)
    .title-count-more
      border-bottom 0
    .crp-box
      background-color #fff
      padding Rem(10)
      text-align center
      textarea
        width 80%
        background-color #eee
        border: 1px solid #999
        height Rem(300)
        padding 3%
      p
        width 86%
        margin Rem(5) auto
        font-size: Rem(10)
        color #999
        text-align left
