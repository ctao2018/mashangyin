@import './base'
.generate-letter
    .gl-iframe
        margin Rem(10) auto
        width 95%
        background-color: #ffffff
        height 83vh
        border-radius: 5px
        iframe
            width: 100%
            height 100%
    .fc-btn
            background-color: #ffffff
            padding Rem(5) Rem(15)     
            z-index 22
            position: fixed
            left 0
            right 0
            bottom 0
            display: flex
            justify-content: space-around
            a   
                width: 43%
                height: Rem(40)
                line-height: Rem(40)
                text-align: center
                color: #fff
                font-size: Rem(15)
                -webkit-border-radius: 5px
                border-radius: 5px
                background-color: $theme-color
                display: inline-block