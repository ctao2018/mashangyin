@import './base'

.l-infromation
  .li-menuBox
    position fixed
    top: Rem(45)
    width 100%
    z-index 9
  .li-menu-list
    background-color: #fff
    font-size: 0
    display flex
    align-items: center
    justify-content: space-around
    box-shadow 0 0 Rem(1) #eee
    li
      font-size: Rem(14)
      display: block
      text-align: center
      a
        height Rem(38)
        line-height Rem(38)
        display: block
        color #666
      &.active a
        border-bottom Rem(2) solid $theme-color
        color $theme-color
  .li-pagebox
    margin-top Rem(45)
    display none
    &.active
      display block
    .lip-page
      margin-bottom Rem(10)
      .lipt-box
        display none
        &.active
          display block
      .lip-tab
        width 100%
        text-align center
        background-color #fff
        th
          width 20%
          border: 1px solid #eee
          // border-top 0
          padding Rem(8) 0
          font-size: Rem(12)
          color: #999
        td
          width 20%
          border: 1px solid #eee
          padding Rem(10) 0
          font-size: Rem(12)
          color: #666666
      .lip-zxpa
        height Rem(150)
        display flex
        justify-content: center
        align-items: center
        img
          max-height: 100%
          max-width 100%
.lipzx-list
  a
    padding Rem(5)
    height Rem(80)
    margin-bottom Rem(5)
    background-color #fff
    display block
    position relative
    .lipzx-img
      width Rem(115)
      height Rem(75)
      display flex
      justify-content: center
      align-items: center
      float left 
      img
        max-width 100%
        max-height 100%
    .lipzx-txt
      margin 0 Rem(10) 
      margin-left Rem(120)
      h3
        color: #333
        font-size: Rem(13)
        font-weight: bold
        padding-top Rem(5)
      .lipzx-miaoshu
        color #666
        ellps(3)
        font-size: Rem(10)
        line-height Rem(13)
        margin Rem(5) 0 Rem(15)
        height Rem(40)
      .lipzx-time
        text-align right
        color: #666
        font-size Rem(10)
        position absolute
        bottom Rem(10)
        right: Rem(15)

          
        