@import './base'

.confirmation-receivables
  .cr-list-box
    >li
      display flex
      justify-content: space-between
      align-items: center
      padding Rem(15)
      background-color #fff
      botLine()
      font-size: Rem(12)
      >span
        color #999
      em
        color #666
        &.cr-red
          color $theme-color
      .slc-box
        toMore(0)
        padding-right Rem(15)
        input
          text-align: right
          border: 0
          font-size: Rem(12)
          color #666
      .crl-img
        width Rem(110)
        height Rem(60)
        display flex
        justify-content: center
        align-items: center
        border 1px solid #eee
        >img
          max-width 100%
          max-height 100%
      .crl-textarea
          width 80%
        textarea
          width 96%
          padding Rem(5) 2%
          height Rem(100)
          border: 1px solid #ccc
          background-color #eee
          color #333
  .crl-foot
    position fixed
    bottom 0
    left 0
    width 100%
    padding Rem(10) 0
    background-color #fff
    box-shadow 0 0 4px #ccc
    >a
      bigBtn()

