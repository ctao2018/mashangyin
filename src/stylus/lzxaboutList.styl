@import './base'
@import './sprite'

.about-list
  margin-top Rem(-45)
  .al-blacks
    height Rem(45)
    line-height Rem(45)
    background-color $theme-color
    position relative
    a
      display inline-block
      width Rem(45/2)
      height Rem(45/2)
      margin Rem(13) Rem(12)
      $headerSprite(3)
  .al-headbox
    height Rem(150)
    background-color $theme-color
    color: #fff
    padding Rem(10) 0
    .alh-tbicon
      width Rem(80)
      height Rem(80)
      display flex
      justify-content: center
      align-items: center
      margin 0 auto
      img
        max-width 100%
    .alh-txt
      text-align center
      padding Rem(10) 0
      font-size: Rem(12)
  .al-listbox
    background-color #fff
    a
      height Rem(45)
      line-height Rem(45)
      color: #666
      font-size: Rem(12)
      display block
      padding 0 Rem(15)
      toMore()
      botLine()
      span
        padding-left Rem(15)
        position relative
        &:after
          content: ''
          position absolute
          left 0
          top: 5%
          height 90%
          width Rem(2)
          background-color $theme-color
    &:last-child
      border-bottom 0

