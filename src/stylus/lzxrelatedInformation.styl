@import './base'

.relate-information
  .ri-section
    margin Rem(10)
    padding Rem(10)
    background-color #fff
    border-radius: Rem(4)
    .ris-page
      display flex
      justify-content: space-between
      align-items: center
      font-size: Rem(11)
      color: #999
      line-height Rem(20)
      >div
        width 50%
        em
          color: #666
          &.ris-red
            color $theme-color
   .ris-footbox
     text-align right
     margin-top Rem(10)
     .ris-link
      smallBtn()
      margin-left Rem(10)
      position relative
      input
        width 100%
        opacity 0
      .slc-box
        position absolute
        top: 0
        left 0
        width 100%
      li
        color: #666

.sec-box
  position fixed
  bottom: 0
  left 0
  width 100%
  box-shadow 0 -4px 8px #ccc
  z-index: 9
  display none
  &.active
    display block
  .sec-list
    background-color #fff
    text-align center
    >a
      height Rem(45)
      line-height Rem(45)
      display block
      color: #666
      outline none
        