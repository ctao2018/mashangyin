@import './base'

.goods-details
    padding-bottom: Rem(50)
    .gd-bx
        margin-top Rem(10)
        padding: 0 Rem(10)
        >ul
            background-color: #ffffff
            border-radius: 5px
            padding Rem(15/2)
            >li
                height Rem(30)
                display: flex
                align-items: center
                border-bottom: 1px solid #eeeeee
                justify-content space-between
                color #666666
                font-size: Rem(12)
                &:last-child
                    border-bottom: none
                >span 
                    width 50%
                    em
                        color #333333
    .dc-bt
            padding Rem(5) Rem(15)
            position: fixed
            left 0
            right 0
            bottom: 0
            z-index 11
            background-color: #f4f4f4
            .dc-bta
                width 100%
                height Rem(40)
                line-height: Rem(40)
                text-align: center
                color: #ffffff
                background-color: $theme-color
                border-radius: 5px
                display: inline-block
